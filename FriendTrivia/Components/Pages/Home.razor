@page "/"

<PageTitle>Friend Trivia</PageTitle>

<section class="container mx-auto flex flex-col items-center justify-center min-h-screen py-8">
    <div class="text-center mb-12">
        <h1 class="text-5xl font-bold mb-4">Friend Trivia</h1>
        <p class="text-xl text-base-content/70">Challenge your friends with daily trivia questions!</p>
    </div>

    <div class="card w-96 bg-base-100 shadow-xl">
        <div class="card-body items-center text-center">
            <h2 class="card-title mb-4">Welcome to Friend Trivia!</h2>
            <p class="mb-6">Share fun facts about yourself or test your knowledge about your friends.</p>
            <div class="card-actions flex flex-col w-full gap-4">
                <a href="/question/daily" class="btn btn-primary w-full">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                        stroke="currentColor" class="w-6 h-6 mr-2">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                    </svg>
                    Today's Question
                </a>
                <a href="/question/create" class="btn btn-secondary w-full">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                        stroke="currentColor" class="w-6 h-6 mr-2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                    </svg>
                    Create Questions
                </a>
            </div>
        </div>
    </div>

    <div class="mt-8 stats shadow">
        <div class="stat place-items-center">
            <div class="stat-title">Current Streak</div>
            <div class="stat-value text-primary">0</div>
            <div class="stat-desc">Days</div>
        </div>
        <div class="stat place-items-center">
            <div class="stat-title">Questions Created</div>
            <div class="stat-value text-secondary">0</div>
            <div class="stat-desc">Total</div>
        </div>
    </div>
</section>